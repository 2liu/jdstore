
<div class="container">

  <div class="my-settings">
    <div class="col-md-3 text-center">
      <img which="160" alt="" src="<%= if @user.image.blank? then "http://placehold.it/180x180" else @user.image.url end%>">
      <p></p>
      <p>当前头像</p>
    </div>
    <div class="col-md-9">
      <div class="my-center-head">
        <div class="my-center-left">
          <span>个人设置</span>
        </div>
        <div class="my-center-right">
          <a href="/account/user" class="active"><span>个人中心</span></a>
          <a href="/account/orders"><span>我的订单</span></a>
          <a href="/account/addresses"><span>管理收货地址</span></a>
          <a href="/users/edit"><span class="hide-line">修改密码</span></a>
        </div>
      </div>
      <div class="my-info">
        <p>基本信息</p>
      </div>
<%= simple_form_for [:account, @user] do |f| %>
      <div class="my-name">
        <span>邮　箱:</span> <span><%= @user.email%></span><br>
        <span>用户名:</span> <input type="text" value="<%= @user.username %>"  name="user[username]"><br>
        <span>性　别:</span>
        <label class="radio-inline">
          <input type="radio" name="user[gender]" value="0" <%= if @user.gender=0 then "checked" end%>> 保密
        </label>
        <label class="radio-inline">
          <input type="radio" name="user[gender]" value="1" <%= if @user.gender=1 then "checked" end%>> 男
        </label>
        <label class="radio-inline">
          <input type="radio" name="user[gender]" value="2" <%= if @user.gender=2 then "checked" end%>> 女
        </label>
      </div>


      <div class="my-photo">
        <p>头像设置</p>
          <%= f.input :image, as: :file %>
      </div>

<%= f.button :submit, '更新', class: 'button' %>
      <% end %>
    </div>
  </div>
</div>
