<div class="container">
  <div class="row">
    <div class="col-md-12">

      <div class="clean_carts">
        <span>
          <%= link_to("清空购物车", clean_carts_path ,
          method: :delete , class: "pull-right",
          data: { confirm: "你确定要清空整个购物车吗？"} )%>
        </span>
      </div>


      <div class="shoping-cart">
        <br>
        <h2>购物车</h2>
        <br>
        <div class="cart-column-head center-block">
          <label class="col-md-3 ">商品</label>
          <label class="col-md-3 ">名称</label>
          <label class="col-md-1 ">单价</label>
          <label class="col-md-2 ">数量</label>
          <label class="col-md-1 ">小计</label>
          <label class="col-md-2 ">操作</label>
        </div>

        <% current_cart.cart_items.each do |cart_item| %>
        <div class="cart-item-<%= cart_item.product_id%>">


        <div class="cart-list text-center">
          <div class="col-md-3 ">

              <%= link_to product_path(cart_item.product) do %>
              <%= image_tag(img430(cart_item.product,1), style: "width: 200px;") %>
              <% end %>
            </div>

            <div class="col-md-3">
              <%= link_to(cart_item.product.title, product_path(cart_item.product)) %>
            </div>

            <div class="col-md-1">
            <%= cart_item.product.promotional %> RMB
          </div>
            <div class="col-md-2">
              <div class="quantity-box" onselectstart="return false">
                <a class="quantity-actions quantity-down<%= if cart_item.quantity == 1 then " disabled" end%>" href="">-</a>
               <input type="text" name="quantity" value="<%= cart_item.quantity%>" max="<%= cart_item.product.quantity %>" class="quantity-input" url="<%= cart_item_path(cart_item.product)%>">
               <a class="quantity-actions quantity-up <%= if cart_item.quantity == cart_item.product.quantity or cart_item.product.quantity == 1 then "disabled" end%>" href="">+</a>
              </div>
            </div>

            <div class="col-md-1">
              <span class="quantity-price"><%= cart_item.product.promotional * cart_item.quantity %> RMB</span>
            </div>

            <div class="col-md-2">
              <%= link_to "Delete", cart_item_path(cart_item.product_id), :method => :delete, :remote => true, :class => "btn btn-danger" %>
            </div>

          </div>
          <hr>
          </div>
          <% end %>
        </div>

        <div class="row">
          <div class="container">
            <span class="pull-right text-center product-price-totle">
              总计：<%= render_cart_total_price(current_cart) %> RMB
            </span>
          </div>

          <div class="container cart-buying-buttom">
            <% if !current_user %>
            <div class="checkout clearfix"><a class="btn btn-lg btn-danger pull-right" href="#" data-toggle="modal" data-target="#login-modal">确认结账</a></li>
            </div>
            <% else %>
            <div class="checkout clearfix">
              <%= link_to("确认结账", checkout_carts_path, method: :post, class: "btn btn-lg btn-danger pull-right") %>
            </div>
            <% end %>
          </div>

        </div>
      </div>
    </div>
  </div>

  <script type="text/javascript">
  $(".shoping-cart").on('click', ".quantity-up", function(evt){
      evt.preventDefault();
      var $app = $(this).siblings('.quantity-input');
      var value = Number($app.val());
      var numMax = Number($app.attr("max"));
      var url = $app.attr("url") + "/up?value="
      if (value < numMax ) {
        $app.val(value += 1);
        //alert('' + url+ String(value) + '')
        $.ajax({
            method: "GET",
            url: url + String(value),
            dataType: "script"
        })
        if (value == numMax) {
            $(this).addClass("disabled")
        }else if (value == 2) {
            $(this).siblings('.quantity-down').removeClass("disabled");
        }
      }
  })
  $(".shoping-cart").on('click', ".quantity-down", function(evt){
      evt.preventDefault();
      var $app = $(this).siblings('.quantity-input');
      var value = Number($app.val());
      var numMax = Number($app.attr("max"));
      var url = $app.attr("url") + "/up?value="
      if (value > 1) {
        $app.val(value -= 1);
        $.ajax({
            method: "GET",
            url: url + String(value),
            dataType: "script"
        })
        if (value == 1) {
            $(this).addClass("disabled")
        }else if (value == (numMax - 1)) {
            $(this).siblings('.quantity-up').removeClass("disabled");
        }
      }
  })
  $(".shoping-cart").on('blur', ".quantity-input", function(evt){
      evt.preventDefault();
      var value = Number($(this).val());
      var numMax = Number($(this).attr("max"));
      var url = $(this).attr("url") + "/up?value="
      if (value >= numMax) {
        value = numMax;
        if (numMax != 1) {
          $(this).siblings('.quantity-up').addClass("disabled");
          $(this).siblings('.quantity-down').removeClass("disabled");
        }
      }
      else if (value <= 1) {
        value = 1;
        if (numMax != 1) {
          $(this).siblings('.quantity-up').removeClass("disabled");
          $(this).siblings('.quantity-down').addClass("disabled");
        }
      }
      else {
        $(this).siblings('.quantity-up').removeClass("disabled");
        $(this).siblings('.quantity-down').removeClass("disabled");
      }
      $(this).val(value);

      $.ajax({
          method: "GET",
          url: url + String(value),
          dataType: "script"
      })
    })





  </script>
